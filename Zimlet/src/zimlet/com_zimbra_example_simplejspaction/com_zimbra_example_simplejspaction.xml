        <toolTipText>Click to launch the JSP Example</toolTipText>
        <onClick>
            <canvas type="window" width="500" height="250" />
            <actionUrl method="get" target="/service/zimlet/com_zimbra_example_simplejspaction/jspfile.jsp" />
        </onClick>
    </zimletPanelItem>
</zimlet>
