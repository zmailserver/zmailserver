<zimlet name="com_zimbra_searchrefiner"
        version="0.8"
        label="Search Refiner"
        description="Allows you to refine the current search.">
    <include>searchrefiner.js</include>
    <includeCSS>searchrefiner.css</includeCSS>
    <handlerObject>com_zimbra_searchrefiner</handlerObject>
    <zimletPanelItem label="Search Refiner" icon="sr-panelIcon">
        <toolTipText>Allows you to refine a current search.</toolTipText>
    </zimletPanelItem>

    <userProperties>
        <property type="string" name="turnOnSearchRefiner" value="true"/>
        <property type="string" name="refinerSearchSize" value="400"/>
    </userProperties>
</zimlet>
