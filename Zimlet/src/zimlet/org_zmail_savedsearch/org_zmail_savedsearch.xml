<zimlet name="com_zimbra_savedsearch"
        version="0.2"
        label="Saved Search"
        description="Automatically creates a Saved Search after repeated searches.">
    <include>savedsearch.js</include>
    <includeCSS>savedsearch.css</includeCSS>
    <handlerObject>com_zimbra_savedsearch</handlerObject>

    <zimletPanelItem label="Auto Saved Search" icon="SearchFolder">
        <toolTipText>Automatically creates a Saved Search after repeated searches.</toolTipText>
    </zimletPanelItem>

    <userProperties>
        <property type="string" name="savedsearch_searchhistory"  value=""/>
        <property type="string" name="savedsearch_maximumrepeat"  value="5"/>
        <property type="string" name="turnONAutoSavedSearch" value="false"/>
    </userProperties>
</zimlet>
