<zimlet name="com_zimbra_shortcutstrainer"
        version="1.2"
        description="Allows you to train and remember most common keyboard shortcuts.">
    <include>shortcutstrainer.js</include>
    <includeCSS>shortcutstrainer.css</includeCSS>
    <handlerObject>com_zimbra_shortcutstrainer</handlerObject>

    <zimletPanelItem label="Shortcuts Trainer" icon="Shortcut">
        <toolTipText>Allows you to train and remember most common keyboard shortcuts.</toolTipText>
    </zimletPanelItem>

    <userProperties>
        <property type="string" name="turnOnShortcutsTrainer" value="false"/>
    </userProperties>
</zimlet>
