<zimlet name="com_zimbra_emailquotes"
        version="0.7"
        label="${msg.label}"
        description="${msg.description}">
    <include>emailquotes.js</include>
    <includeCSS>emailquotes.css</includeCSS>
    <handlerObject>com_zimbra_emailquotes_HandlerObject</handlerObject>
    <zimletPanelItem label="${msg.EmailQuotesZimlet_panel_label}" icon="emailquotes-panelIcon">
        <toolTipText>${msg.EmailQuotesZimlet_panel_tooltip}</toolTipText>
    </zimletPanelItem>
    <userProperties>
        <!-- default: hope,humor,leadership,virtue,wisdom -->
        <property type="string" name="equotes_defaultSelections" value="115,74,27,9,64,81"/>
        <property type="string" name="equotes_userSelections" value=""/>
        <property type="string" name="turnEmailQuotesZimletON" value="false"/>
    </userProperties>
</zimlet>
