use strict;
my $zmail_home = "/opt/zmail";

use lib "/opt/zmail/zmailmon/lib";
use  Zmail::Util::Common;
use Zmail::Mon::Logger;

# Exit if software-only node.
exit(0) unless (-f "${zmail_home}/conf/localconfig.xml");

$SIG{ALRM} = \&catchAlarm;

my $platform=`${zmail_home}/libexec/get_plat_tag.sh`;
chomp $platform;

my $pidFile="${zmail_home}/log/zmstatuslog.pid";

my $TIMEOUT=60;
my $MNTCMD;
my $DFCMD;
if ($platform eq "MACOSX") {
	$MNTCMD = "mount -t hfs";
	$DFCMD = "df -ml ";
} else {
	$MNTCMD = "mount -t ext3";
	$DFCMD = "df -ml ";
}

my $dt = `date "+%Y-%m-%d %H:%M:%S"`;
chomp $dt;

my $hostname;

checkPid();
logStatus();
clearPid();

exit 0;

sub logStatus {
	my @status = ();
  alarm($TIMEOUT);
	open STATUS, "${zmail_home}/bin/zmcontrol status |" or die "Can't get status: $!";
	@status = <STATUS>;
	close STATUS;
	foreach my $s (@status) {
		if ($s =~ /is not/) {
			next;
		}
		chomp $s;
		if ($s =~ /^Host (.*)/) {
			$hostname = $1;
			next;
		}
		my ($service, $stat) = split ' ', $s, 2;
		Zmail::Mon::Logger::LogStats( "info", "$dt, STATUS: ${hostname}: $service: $stat" );
	}
  alarm(0);
}

sub checkPid {
  if (-f "$pidFile") {
    my $P = `cat $pidFile`;
    chomp $P;
    if ($P ne "") {
      system("kill -0 $P 2> /dev/null");
      if ($? == 0) {
        print "$0 already running with pid $P\n";
        exit 0;
      }
    }
  }
  `echo $$ > "$pidFile"`;
}

sub clearPid {
  unlink($pidFile);
}

sub catchAlarm {
		Zmail::Mon::Logger::LogStats( "info", "zmstatuslog timeout after $TIMEOUT seconds"); 
    exit 1;
}
