use strict;

use lib "/opt/zmail/zmailmon/lib";
use Zmail::Util::Common;
use Zmail::Mon::Logger;

my $platform=`/opt/zmail/libexec/get_plat_tag.sh`;
chomp $platform;

my $MNTCMD;
my $DFCMD;
if ($platform eq "MACOSX") {
	$MNTCMD = "mount -t hfs";
	$DFCMD = "df -ml ";
} else {
	$MNTCMD = "mount -t ext3";
	$DFCMD = "df -ml ";
}

my $dt = `date "+%Y-%m-%d %H:%M:%S"`;
chomp $dt;

checkPid();
logQueue();
clearPid();

exit 0;

sub checkPid {
	if (-f "/opt/zmail/log/zmqueuelog.pid") {
		my $P = `cat /opt/zmail/log/zmqueuelog.pid`;
		chomp $P;
		if ($P ne "") {
      system("kill -0 $P 2> /dev/null");
      if ($? == 0) {
        print "$0 already running with pid $P\n";
        exit 0;
      }
		}
	}
	`echo $$ > "/opt/zmail/log/zmqueuelog.pid"`;
}

sub clearPid {
	unlink ("/opt/zmail/log/zmqueuelog.pid");
}

sub logQueue {
	my @status = ();
	open STATUS, "/opt/zmail/postfix/sbin/postqueue -p |" or die "Can't get status: $!";
	@status = <STATUS>;
	close STATUS;
	my $kb = 0;
	my $msgs = 0;
	my $s = $status[$#status];
	if ($s =~ /^--/) {
		my @foo = split (' ', $s);
		$kb = $foo[1];
		$msgs = $foo[4];
	}
	Zmail::Mon::Logger::Log( "info", "$dt, QUEUE: $kb $msgs" );
}
