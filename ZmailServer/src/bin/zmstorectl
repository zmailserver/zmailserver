source `dirname $0`/zmshutil || exit 1
zmsetvars \
  zmail_home \
  mailboxd_directory \
  zmail_mysql_password

MYSQL="${zmail_home}/bin/mysql -u zmail --password=${zmail_mysql_password}"

START_ORDER="mysql.server zmmailboxdctl"
STOP_ORDER="zmmailboxdctl mysql.server"

STATUS=0

flushDirtyPages() {
  # make sure mysql is running
  ${zmail_home}/bin/mysql.server status > /dev/null 2>&1
  if [ $? != 0 ]; then
    return
  fi

  # make sure innodb is enabled
  local innodb_status=$(echo "show engines;" | ${MYSQL} | grep InnoDB | cut -f2)
  if [ "$innodb_status" = "DISABLED" ]; then
    return
  fi

  # set max_dirty_pages=0 so mysql starts flushing dirty pages to disk.
  ${MYSQL} -e "slave stop; set global innodb_max_dirty_pages_pct=0;"
  if [ $? != 0 ]; then
    return
  fi

  # wait for 600 seconds or until there are no more dirty pages
  local i=0
  while [ $i -lt 600 ]; do
    local pages=$(${MYSQL} -e "show engine innodb status\G" | grep '^Modified db pages' | grep -Eo '[0-9]+$')
    if [ "$pages" = "0" ]; then
      break
    fi
    #echo -ne "$pages\r"
    i=$((i+1))
    sleep 1
  done
}

case "$1" in 
  start)
    if [ x$2 = "x" ]; then
	  # Call tlsctl to get all the mailbox config files
      ${zmail_home}/bin/zmtlsctl >/dev/null 2>&1
    fi
    for i in $START_ORDER; do
      ${zmail_home}/bin/$i start norewrite >/dev/null 2>&1
      R=$?
      if [ $R -ne "0" ]; then
        STATUS=$R
      fi
    done
    exit $STATUS
  ;;
  stop)
    for i in $STOP_ORDER; do
      if [ "$i" = "mysql.server" ]; then
        flushDirtyPages
      fi
      ${zmail_home}/bin/$i stop
      R=$?
      if [ $R -ne "0" ]; then
        STATUS=$R
      fi
    done
    exit $STATUS
  ;;
  restart|reload)
    for i in $START_ORDER; do
      ${zmail_home}/bin/$i $1
      R=$?
      if [ $R -ne "0" ]; then
        STATUS=$R
      fi
    done
    exit $STATUS
  ;;
  status)
    for i in $START_ORDER; do
      if [ $i = "mysql.server" ]; then
        ${zmail_home}/bin/mysqladmin status > /dev/null 2>&1
      else
        ${zmail_home}/bin/$i status > /dev/null 2>&1
      fi
      R=$?
      if [ $R -ne "0" ]; then
        echo "$i is not running."
        if [ x"$i" != "xzmconfigdctl" ]; then
          STATUS=$R
        fi
      fi
    done
    exit $STATUS
  ;;
  *)
    echo "$0 start|stop|restart|reload|status"
    exit 1
  ;;
esac
