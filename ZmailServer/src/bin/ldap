PID=""
PIDFILE="/opt/zmail/openldap/var/run/slapd.pid"

mkdir -p "/opt/zmail/openldap/var/run/"

getpid()
{
	if [ -f $PIDFILE ]; then
		PID=`cat $PIDFILE`
	fi
}

checkrunning()
{
	getpid
	if [ "x$PID" = "x" ]; then
		RUNNING=0
	else
		kill -0 $PID
		if [ $? != 0 ]; then
			PID=""
			RUNNING=0
		else
			RUNNING=1
		fi
	fi
}

start()
{
	checkrunning
	if [ $RUNNING = 0 ]; then
		# Run db_recover on startup, in case of power failure.
		# Not necessary with OpenLDAP 2.3+
		#if [ -x /opt/zmail/sleepycat/bin/db_recover ]; then
		#	/opt/zmail/sleepycat/bin/db_recover -h /opt/zmail/openldap/var/openldap-data -v
		#fi
		sudo /opt/zmail/libexec/zmslapd -l LOCAL0 -u `whoami` -h "ldap://:389/" \
			-f /opt/zmail/conf/slapd.conf
		sleep 2
		getpid
		echo "Started slapd: pid $PID"
	else
		echo "slapd already running: pid $PID"
		exit 1
	fi
}

stop()
{
	checkrunning
	if [ $RUNNING = 0 ]; then
		echo "slapd not running"
		exit 1
	else
		kill -TERM $PID
	fi
}

status()
{
	checkrunning
	if [ $RUNNING = 0 ]; then
		exit 1
	else
		echo "slapd running pid: $PID"
		exit 0
	fi
}

case "$1" in 
	restart)
		$0 stop
		$0 start
		;;
	start)
		start
		;;
	stop)
		stop
		;;
	status)
		status
		;;
	*)
		echo "Usage: $0 start|stop|status"
		exit 1
		;;
esac
