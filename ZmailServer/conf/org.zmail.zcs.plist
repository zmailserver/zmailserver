<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Debug</key>
	<true/>
	<key>EnvironmentVariables</key>
	<dict>
		<key>JYTHONPATH</key>
		<string>/opt/zmail/zmailmon/pylibs</string>
		<key>PATH</key>
		<string>/opt/zmail/bin:/opt/zmail/postfix/sbin:/opt/zmail/openldap/bin:/opt/zmail/java/bin:/usr/bin:/bin:/sbin:/usr/sbin</string>
		<key>PERL5LIB</key>
		<string>/opt/zmail/zmailmon/lib/darwin-thread-multi-2level:/opt/zmail/zmailmon/lib</string>
	</dict>
	<key>GroupName</key>
	<string>zmail</string>
	<key>HardResourceLimits</key>
	<dict>
		<key>NumberOfFiles</key>
		<integer>524288</integer>
		<key>NumberOfProcesses</key>
		<integer>2048</integer>
	</dict>
	<key>Label</key>
	<string>org.zmail.zcs</string>
	<key>OnDemand</key>
	<false/>
	<key>ProgramArguments</key>
	<array>
		<string>/opt/zmail/libexec/zcs</string>
		<string>start</string>
	</array>
	<key>RunAtLoad</key>
	<true/>
	<key>ServiceDescription</key>
	<string>Zmail Collaboration Suite</string>
	<key>StandardOutPath</key>
	<string>/opt/zmail/log/zcs-launchd.log</string>
	<key>TimeOut</key>
	<integer>300</integer>
	<key>Umask</key>
	<integer>27</integer>
	<key>UserName</key>
	<string>zmail</string>
</dict>
</plist>
