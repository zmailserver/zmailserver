    version="2.4">

  <display-name>Zimbra Service</display-name>
  <description>SOAP Service</description>
  
  <filter>
    <filter-name>DoSFilter</filter-name>
    <filter-class>com.zimbra.cs.servlet.DoSFilter</filter-class>

    <init-param>
     <param-name>delayMs</param-name>
     <param-value>-1</param-value>
    </init-param>

    <init-param>
     <param-name>maxRequestsPerSec</param-name>
     <param-value>30</param-value>
    </init-param>

    <init-param>
     <param-name>remotePort</param-name>
     <param-value>true</param-value>
    </init-param>
    
    <init-param>
     <param-name>maxRequestMs</param-name>
     <param-value>9223372036854775807</param-value>
    </init-param>
    
  </filter>
  
  <filter-mapping>
    <filter-name>DoSFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <filter>
    <filter-name>ZimbraQoSFilter</filter-name>
    <filter-class>com.zimbra.cs.servlet.ZimbraQoSFilter</filter-class>
  </filter>
  
  <filter-mapping>
    <filter-name>ZimbraQoSFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <filter>
    <filter-name>ThrottlingFilter</filter-name>
    <filter-class>com.zimbra.cs.servlet.ThrottlingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ThrottlingFilter</filter-name>
    <url-pattern>/zimlet/*</url-pattern>
  </filter-mapping>
  
  <filter>
    <filter-name>ETagHeaderFilter</filter-name>
    <filter-class>com.zimbra.cs.servlet.ETagHeaderFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ETagHeaderFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <filter>
    <filter-name>SpnegoFilter</filter-name>
    <filter-class>com.zimbra.cs.servlet.SpnegoFilter</filter-class>
    
    <init-param>
      <param-name>passThruOnFailureUri</param-name>
      <param-value>/service/spnego</param-value>
    </init-param>
    
  </filter>
  
  <filter-mapping>
    <filter-name>SpnegoFilter</filter-name>
    <url-pattern>/spnego/*</url-pattern>
  </filter-mapping>
  
  <filter>
    <filter-name>GzipFilter</filter-name>
    <filter-class>org.eclipse.jetty.servlets.IncludableGzipFilter</filter-class>

    <init-param>
      <param-name>mimeTypes</param-name>
      <param-value>application/soap+xml</param-value>
    </init-param>

    <init-param>
      <param-name>userAgent</param-name>
      <param-value>(?:Mozilla[^\(]*\(compatible;\s*+([^;]*);.*)|(?:.*?([^\s]+/[^\s]+).*)</param-value>
    </init-param>

    <init-param>
      <param-name>excludedAgents</param-name>
      <param-value>MSIE 6.0</param-value>
    </init-param>

    <init-param>
      <param-name>minGzipSize</param-name>
      <param-value>2048</param-value>
    </init-param>

    <init-param>
      <param-name>uncheckedPrintWriter</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>GzipFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>ZimbraSyncGzipFilter</filter-name>
    <filter-class>org.eclipse.jetty.servlets.IncludableGzipFilter</filter-class>

    <init-param>
      <param-name>mimeTypes</param-name>
      <param-value>text/plain,text/html,application/pdf,application/vnd.ms-sync.wbxml,application/vnd.ms-sync.multipart,application/msword,application/vnd.ms-excel,application/vnd.ms-powerpoint</param-value>
    </init-param>

    <init-param>
      <param-name>minGzipSize</param-name>
      <param-value>2048</param-value>
    </init-param>

    <init-param>
      <param-name>uncheckedPrintWriter</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>ZimbraSyncGzipFilter</filter-name>
    <url-pattern>/extension/zimbrasync/*</url-pattern>
  </filter-mapping>

